<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <!-- Light values -->
    <color name="background_material_light">@*android:color/rnr_myterial_background_color_light</color>
    <color name="background_floating_material_light">@*android:color/rnr_myterial_primary_color_light</color>
    <color name="primary_material_light">@*android:color/rnr_myterial_background_color_light</color>
    <!-- Workaround for light themed settings background -->
    <color name="primary_material_settings_light">@*android:color/rnr_myterial_background_color_light</color>
    <color name="primary_dark_material_light">@*android:color/rnr_myterial_primary_color_light</color>
    <color name="primary_dark_material_settings_light">@*android:color/rnr_myterial_primary_color_light</color>
    <!-- The background color of a notification card. -->
    <color name="notification_material_background_color">@*android:color/rnr_myterial_background_color_light</color>
    <!-- Notification default icon color -->
    <color name="notification_default_color_light">@*android:color/accent_device_default_light</color>
    <!-- Nuke those dividers -->
    <color name="list_divider_color_light">#00000000</color>
    <color name="list_divider_opacity_device_default_light">#00000000</color>

    <!-- Dark values -->
    <color name="background_material_dark">@*android:color/rnr_myterial_background_color_dark</color>
    <color name="background_floating_material_dark">@*android:color/rnr_myterial_primary_color_dark</color>
    <color name="primary_material_dark">@*android:color/rnr_myterial_background_color_dark</color>
    <color name="primary_material_settings">@*android:color/rnr_myterial_background_color_dark</color>
    <color name="primary_dark_material_dark">@*android:color/rnr_myterial_primary_color_dark</color>
    <color name="primary_dark_material_settings">@*android:color/rnr_myterial_primary_color_dark</color>
    <!-- Notification default icon color -->
    <color name="notification_default_color_dark">@*android:color/accent_device_default_dark</color>
    <!-- Nuke those dividers -->
    <color name="list_divider_color_dark">#00000000</color>
    <color name="list_divider_opacity_device_default_dark">#00000000</color>
    <!-- Tint the notif icons and name -->
    <color name="notification_text_default_color">@*android:color/accent_device_default_light</color>
    <color name="notification_icon_default_color">@*android:color/accent_device_default_light</color>
</resources>
